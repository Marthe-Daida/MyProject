<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Musication.Views.LoginView">

    <StackLayout Margin="0" VerticalOptions="StartAndExpand">
        <StackLayout>
            <Label Text="Username" FontSize="Large" />
            <Entry Text="{Binding Username}"/>
            <Label Text="Password"  FontSize="Large"/>
            <Entry  Text="{Binding Password}"/>
            <Button Text="Login" Command="{Binding LoginCommand}"  CornerRadius="30" BackgroundColor="Gray"/>
            <Button Text="SignUp" Command="{Binding SignUpCommand}"  CornerRadius="30" BackgroundColor="Gray"/>
            <Label x:Name="messageLabel" />
        </StackLayout>
    </StackLayout>
</ContentPage>












